{
    "name": "lit-css-ts-mvp",
    "version": "0.0.1",
    "description": "Minimum Viable Product - app consuming CSS using lit-css",
    "types": "typings/index.d.ts",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist/scripts && rollup -c etc/rollup.config.js",
        "build:watch": "rollup -c etc/rollup.config.js -w",
        "dev": "npm-run-all -p build:watch start",
        "start": "node bin/server.js"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "browser-sync": "^2.26.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "@rollup/plugin-typescript": "^4.0.0",
        "rollup": "^2.3.4",
        "rollup-plugin-lit-css": "^2.0.1",
        "tslib": "^1.11.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "lit-element": "^2.3.1",
        "lit-html": "^1.2.1"
    }
}
